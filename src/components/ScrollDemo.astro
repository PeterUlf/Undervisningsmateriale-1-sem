<div class="scroll-demo-container">
  <div class="scroll-box">
    Scrol mig!
  </div>
</div>

<style>
  .scroll-demo-container {
    height: 400px;
    border: 2px dashed var(--sl-color-gray-5);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 2rem 0;
    background: var(--sl-color-gray-6);
  }
  
  .scroll-box {
    width: 150px;
    height: 150px;
    background: var(--sl-color-accent);
    color: var(--sl-color-text-invert);
    display: grid;
    place-items: center;
    font-weight: bold;
    border-radius: 1rem;
    
    /* Animationen */
    animation: appear-and-rotate linear both;
    /* view() betyder at animationen kører baseret på hvor elementet er i viewporten */
    animation-timeline: view();
    /* Start animation når elementet går ind (entry) og slut når det går ud (exit) */
    animation-range: entry 0% cover 50%;
  }

  @keyframes appear-and-rotate {
    from { 
      opacity: 0;
      transform: translateX(-100px) rotate(-180deg); 
    }
    to { 
      opacity: 1;
      transform: translateX(0) rotate(0deg); 
    }
  }
</style>
